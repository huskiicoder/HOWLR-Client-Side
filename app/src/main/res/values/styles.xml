<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/background_color</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="android:textColorPrimary">@color/text_color</item>
    </style>

    <!-- Application dark theme ADDED. -->
    <style name="AppThemeDark" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/background_color</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="android:textColorPrimary">@color/text_color</item>
    </style>

    <!-- Defined shorthand themes inheriting from above -->
    <style name="Light" parent="AppTheme"/>
    <style name="Dark" parent="AppThemeDark"/>

</resources>
