<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/create_chat_card_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    app:cardCornerRadius="5dp"
    tools:context=".ui.messages.createChats.CreateChatFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/purple_default">

            <androidx.cardview.widget.CardView
                android:id="@+id/create_chat_profile_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="70dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_friends_icon_24" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/create_chat_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/create_chat_first_name"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/create_chat_profile_image"
                android:text="Cb3"
                android:textAlignment="textStart"
                android:textColor="@color/text_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/create_chat_first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/create_chat_profile_image"
                android:text="Charles"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/text_color"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/create_chat_last_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.0" />


            <TextView
                android:id="@+id/create_chat_last_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/create_chat_first_name"
                android:text="Bryan"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="@color/text_color"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/create_chat_first_name" />

            <ImageView
                android:id="@+id/create_chat_selected_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="360dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="13dp"
                android:layout_marginBottom="58dp"
                android:gravity="end"
                android:src="@drawable/ic_create_chat_friend_blank_checkbox_24" />

        </RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>