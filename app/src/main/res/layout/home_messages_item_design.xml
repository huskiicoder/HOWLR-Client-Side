<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="175dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/background_color2">

        <androidx.cardview.widget.CardView
            android:id="@+id/profile_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp"
            app:cardCornerRadius="70dp">

            <ImageView
                android:id="@+id/picture"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:scaleType="centerCrop"
                android:src="@drawable/shibabone">

            </ImageView>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/display_name"
            android:layout_width="110dp"
            android:layout_height="13dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@id/profile_image"
            android:text="Charles Bryan"
            android:textColor="@color/text_color"
            android:textSize="10sp">

        </TextView>

        <TextView
            android:id="@+id/message_time"
            android:layout_width="30dp"
            android:layout_height="9dp"
            android:layout_marginLeft="-30dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@id/display_name"
            android:text="7:30 pm"
            android:textAlignment="textEnd"
            android:textColor="@color/accent_color_light"
            android:textSize="6sp">

        </TextView>

        <TextView
            android:id="@+id/message_content"
            android:layout_width="210dp"
            android:layout_height="13dp"
            android:layout_below="@id/display_name"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/profile_image"
            android:text="Are you ready for your sprint review?"
            android:textColor="@color/text_color"
            android:textSize="12sp">

        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/accent_color_light" />

    </RelativeLayout>

</RelativeLayout>